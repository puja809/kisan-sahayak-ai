{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "weather-api",
      "urls": [
        "/api/v1/weather/**"
      ],
      "cacheConfig": {
        "maxSize": 20,
        "maxAge": "30m",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "schemes-api",
      "urls": [
        "/api/v1/schemes/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "24h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "mandi-api",
      "urls": [
        "/api/v1/mandi/**"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "1h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "crops-api",
      "urls": [
        "/api/v1/crops/**"
      ],
      "cacheConfig": {
        "maxSize": 30,
        "maxAge": "12h",
        "timeout": "10s",
        "strategy": "freshness"
      }
    }
  ]
}